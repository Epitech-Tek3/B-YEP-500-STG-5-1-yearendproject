{
  "compilerOptions": {
    "allowJs": false,
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "skipLibCheck": true
  },
  "compileOnSave": true,
  "exclude": ["./node_modules"],
  "include": ["./src", ".env", "**/*.json"]
}
